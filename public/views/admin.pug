extends head
block content
  



        //Search Bar ************************************Update sebb ***************************************************************

        div.flex-container
            div.flex-item#searchBarAdmin
                form(id="filterForm" action="#" method="post")
                  select(id="vehicleType")
                    option(value=""  selected) VehicleType
                  select(id="brand" )
                    option(value=""  selected) Brand
                  select(id="model" )
                    option(value=""  selected) Model
                  select(id="gearbox" )
                    option(value=""  selected) Gearbox
                  button(id="searchBtn" type="submit" disabled=true title="date must be selected" ) Search

           




            // Form *********************************************************************************************************

            div.form-group#typeD

              form.flex-item#adminForm(method='POST' action='/register')

                  label(for="skador") Vehicle Type:
                  input#vehicleTypeInput.form-control(type='text', placeholder='VehicleType' name='vehicleType')

                  //Brand
                  div.form-group#brandD
                    label(for='brand') Brand:
                    input#brandInput.form-control(type='text', placeholder='Brand of the car' name='brand')

                    //Model
                  div.form-group#modelD
                    label(for='model') Model:
                    input#modelInput.form-control(type='text', placeholder='Model of the car' name='model')

                    //Date /// Start and end of rent +++++++++++++++++++++++++++
                  div.form-group#yearD
                    label(for='date') Year:
                    input#date.form-control(type='text', placeholder='YYYY' name='date')

                    //Fuel
                  div.form-group#fuelD
                    label(for='fuel') Fuel Type:
                    select#fuel.form-control( name='fuel')
                      option(value="ethanol") ethanol
                      option(value="methanol") methanol
                      option(value="gasoline") gasoline
                      option(value="naturalGas") natural gas
                      option(value="hydrogen") hydrogen
                      option(value="biodiesel") diesel

                    //Gear
                  div.form-group#gearD
                    label(for='gearbox') Gear Type:
                    select#gearboxFormSelect.form-control name='gearbox')
                      option(value="manuall") manuall
                      option(value="automat") automat

                  //Licence

                  div.form-group#licenceD
                    label(for='licence') Licence Type:
                    select#licence.form-control( name='licence')
                      option(value="AM") AM
                      option(value="A1") A1
                      option(value="A2") A2
                      option(value="A") A
                      option(value="B1") B1
                      option(value="B") B
                      option(value="C1") C1
                      option(value="C") C
                      option(value="D1") D1
                      option(value="D") D
                      option(value="BE") BE
                      option(value="C1E") C1E
                      option(value="CE") CE
                      option(value="D1E") D1E
                      option(value="DE") DE

                    //Price
                  div.form-group#priceD
                    label(for='price') Price:
                    input#price.form-control(type='text', placeholder='price of the car' name='price')

                    //Status
                  div.form-group#isAvailableD
                    label(for='isAvailable') Status:
                    select#isAvailable.form-control(type='text', name='isAvailable')
                      option(value="true") Available
                      option(value="false") Not Available

                    //Comment
                  div.form-group#commentD
                    label(for='comment')
                    textarea#comment.form-control(name="comment", cols="30", rows="10",placeholder="Comment")
                  p#idHolder
              div#buttonsD
                button.btn.btn-primary(type='submit' id="addB") ADD
                button.btn.btn-primary(type='submit' id="deleteB") DELETE
                button.btn.btn-primary(type='submit' id="updateB") UPDATE


              div.flex-item#searchResults

                table#t01(style = "width:100%")

                  tr
                    th Image
                    th Vehicle Type
                    th Brand
                    th Model
                    th Date
                    th Fuel Type
                    th Gear Type
                    th Driving Licence
                    th Price / day
                    th Is Available
                    th Comment


                  each car in content
                    tr(class="row" data-id=car._id)

                      td
                        img(src=car.imgLink height='50px' width='50px' )
                      td #{car.fordonstyp}
                      td #{car.brand}
                      td #{car.model}
                      td #{car.year}
                      td #{car.fuel}
                      td #{car.gearbox}
                      td #{car.requiredDrivingLicense}
                      td #{car.dagshyra}
                      td #{car.status.isAvailable}
                      td #{car.kommentarer.skador}

                  
                  
                  


        script(src='../scripts/admin.js')